<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_main"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_01"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/main_activity_select_album_design"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_01_select_album_design"
        android:paddingTop="50dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/main_activity_create_album"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_01_show_album"
        android:layout_marginBottom="50dp"/>

</LinearLayout>
