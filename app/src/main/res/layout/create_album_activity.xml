<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAlbumActivity"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_main"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/create_album_bgi"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/content_create_album_layout_01">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/content_create_album_layout_02">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/content_create_album_layout_03">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/content_create_album_layout_04">
                <ImageView
                    android:id="@+id/template_create_album_list_image_04"
                    android:layout_width="0dp"
                    android:src="@drawable/create_album_comment"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/content_create_album_layout_05">
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/content_create_album_layout_06">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
